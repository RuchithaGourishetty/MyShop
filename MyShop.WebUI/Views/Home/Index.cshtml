<h1>Products</h1>
<div class="col-md-12">
    <h4>Filter By Category</h4>
    <div class="list-group">
        @Html.ActionLink("All","Index",null, new{})
        @foreach(var cat in Model.ProductCategories){
            @Html.ActionLink(cat.Category, "Index", new{Category = cat.Category},new{})
        }
    </div>
</div>

<div class="col-md-12">


@foreach(var item in Model.Product){
    <div class="col-md-4" style="height:450px;padding:10px;margin:10px;border:solid thin whitesmoke">
        <div class="col-md-12">
            <img class="img" style="height:250px" src="/assets/@item.Image"/>
        </div>

        <div class="col-md-12">
            <strong>@Html.ActionLink(item.Name,"Details",new {id=item.Id})</strong>
        </div>

        <div class="col-md-12">
            <p>item.Description</p>
        </div>

        <div class="col-md-12">
            <p>item.Price</p>
        </div>

        <div class="col-md-12">
            <a href="#" class="btn-btn-default">Add to Basket </a>
        </div>

    </div>
}
</div>
<div class="col-md-12 clearfix" ></div>