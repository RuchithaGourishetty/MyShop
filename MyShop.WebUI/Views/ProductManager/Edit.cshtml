@model MyShop.Core.ViewModels.ProductManagerViewModel


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />

            <div class="col-md-12">
                <img class="img-responsive" src="wwwroot/assets/@Model.Product.Image"/>
            </div>

            <div class="col-md-10">

            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Category" class="control-label"></label>
                @Html.DropDownListFor(model=>model.Product.Category,new SelectList(Model.ProductCategories,"Category","Category"))
            </div>
                <div class="form-group">
                    @*<img class="img-responsive" src="@Model.product.Image" />*@
                    @*<img class="img-responsive" src="/assets/QM.png" alt="" height=100 width=200 />*@
                   @* <label asp-for="Product.Image" class="control-label"></label>
                    <input type="file" id="file" name="file" class="form-control" />*@
                    <img class="img-responsive" src="/assets/@Model.Product.Image" alt="" height=50 width=100 />
                </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
